<Window x:Class="tmp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tmp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    
        <StackPanel>
        <ComboBox Name="colorsComboBox" Width="100" HorizontalAlignment="Left" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Background="Red">
                <Brush>Red</Brush>
            </ComboBoxItem>

            <ComboBoxItem Background="Green">
                <Brush>Green</Brush>
            </ComboBoxItem>

            <ComboBoxItem Background="Blue">
                <Brush>Blue</Brush>
            </ComboBoxItem>
        </ComboBox>
        <Button x:Name="button1" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,0,0,0" Click="Button_Click">Erase last</Button>
        <Slider Width="100" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,0,0,0" ValueChanged="Slider_ValueChanged" Minimum="1" Maximum="10"></Slider>
        <Grid Name="Stack1">
            
        </Grid>
        </StackPanel>

</Window>
